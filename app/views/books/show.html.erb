<div class="container">
    <br>
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
            <h6>Visualizar Livro</h6>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <%= link_to "Voltar", books_path , class:"btn btn-outline-secondary"%>
        </div>
    </div>
    <hr>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-center">
                    <div class="col-md-6 text-center">
                        <%= image_tag(@book.image, height: '200', width: '200')  if @book.image.present? %>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <label for="validationCustom01" class="form-label ">Descrição</label>
                    <textarea class="form-control " id="exampleFormControlTextarea1" rows="3" disabled
                        readonly> <%= @book.description %></textarea>
                </div>
            </div>
        </div>
    </div>
</div>